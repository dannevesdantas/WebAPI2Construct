<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>netstandard1.0</TargetFramework>
    <Version>0.2.0</Version>
    <Authors>danilondantas</Authors>
    <Description>WebAPI2Construct simplifies the integration of ASP.NET Web API with Construct 2 game engine by Scirra</Description>
    <Company>danilondantas</Company>
    <PackageProjectUrl>https://github.com/dannevesdantas/WebAPI2Construct</PackageProjectUrl>
    <RepositoryUrl>https://github.com/dannevesdantas/WebAPI2Construct</RepositoryUrl>
    <RepositoryType>git</RepositoryType>
    <PackageTags>Scirra;Construct2;AJAX;JSON;API;Game</PackageTags>
    <GeneratePackageOnBuild>true</GeneratePackageOnBuild>
    <PackageLicenseExpression>Apache-2.0</PackageLicenseExpression>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="Newtonsoft.Json" Version="10.0.1" />
  </ItemGroup>

</Project>
